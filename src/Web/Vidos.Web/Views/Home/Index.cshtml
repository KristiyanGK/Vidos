@model IEnumerable<Vidos.Services.Models.Product.ViewModels.ListProductsViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h1 class="my-4">Vidos</h1>
            <h3>Марки</h3>
            <div id="BrandsLinks" class="list-group">
                
            </div>
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/images/index/carousel1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/index/carousel2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/index/carousel3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <h2 class="text-center">Най-популярни продукти</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="@Url.Action("Details", "Products", new {area = "Shopping", id = item.Id, query = ViewContext.HttpContext.Request.QueryString})">
                                <img class="card-img-top" src="~/@item.ImagePath" alt="@item.Name">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Details", "Products", new {area = "Shopping", id = item.Id, query = ViewContext.HttpContext.Request.QueryString})">
                                        @item.Name
                                    </a>
                                </h4>
                                <h5>@item.Price &#1083;&#1074</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </div>
                }               
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->

@section Scripts {
    <script src="~/js/HomeIndex.js"></script>
}