@using Microsoft.AspNetCore.Http.Extensions
@model Vidos.Services.DataServices.Contracts.ICartService

<div>
    @if (Model.Items.Any())
    {
        <small class="navbar-text">
            <b>Вашета количка:</b>
            @Model.Items.Sum(x => x.Quantity) продукт(а)
            @Model.TotalValue()&#1083;&#1074;
        </small>
    }
    <a class="btn btn-sm btn-secondary"
       asp-controller="Cart" asp-action="Index"
       asp-route-returnurl="@ViewContext.HttpContext.Request.GetEncodedPathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>